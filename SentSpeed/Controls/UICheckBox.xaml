<UserControl x:Class="SentSpeed.Controls.UICheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SentSpeed.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100" Width="{Binding ActualWidth, ElementName=stackPanel, Mode=OneWay}"   Loaded="UserControl_Loaded" Background="#FF585858">
    <Grid>
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" Margin="0" >
            <Border x:Name="border" HorizontalAlignment="Left" Width="{Binding ActualHeight, ElementName=border}"/>
            <Label x:Name="LabelText" Content="Автозапуск" Foreground="White" FontSize="16" VerticalContentAlignment="Center" Padding="5,0" MouseDown="LabelText_MouseDown"></Label>
        </StackPanel>

    </Grid>
</UserControl>
