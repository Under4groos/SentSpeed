<Window x:Class="SentSpeed.windows.Windinfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SentSpeed.windows"
        WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}"
        IsVisibleChanged="Window_IsVisibleChanged">
    <Window.Background>
        <SolidColorBrush  ></SolidColorBrush>
    </Window.Background>
    <Grid x:Name="grid" HorizontalAlignment="Right" VerticalAlignment="Top">
        <Label Background="#FF1F1F1F" x:Name="LabelText" Content="" Foreground="White" FontSize="24" Padding="0" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Right" Margin="0,0,3,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
